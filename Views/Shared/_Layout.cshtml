<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title SystemTrainingFPT</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FPT", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                <li>@Html.ActionLink("ManageUsers", "UsersWithRoles", "ManageUsers")</li>
}
                    @if (Request.IsAuthenticated && User.IsInRole("TrainingStaff"))
                    {
                <li>@Html.ActionLink("Manage Account", "Index", "ManagerStaffViewModels")</li>
                <li>@Html.ActionLink("Manage Category", "Index", "Categories")</li>
                <li>@Html.ActionLink("Manage Courses", "Index", "Courses")</li>
                <li>@Html.ActionLink("Manage Topics", "Index", "Topics")</li>
                <li>@Html.ActionLink("Assign Trainers Topic", "Index", "TrainerTopics")</li>
                <li>@Html.ActionLink("Assign Trainee Course", "Index", "TraineeCourses")</li>

}
                    @if (Request.IsAuthenticated && User.IsInRole("Trainer"))
                    {
                <li>@Html.ActionLink("TrainerTopic", "Index", "TrainerTopics")</li>
                <li>@Html.ActionLink("ProfileTrainer", "About", "Home")</li>
}
                    @if (Request.IsAuthenticated && User.IsInRole("Trainee"))
                    {
                <li>@Html.ActionLink("TraineeCourses", "Index", "TrainerCourses")</li>}

                </ul>
                                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p> FPT Training</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
